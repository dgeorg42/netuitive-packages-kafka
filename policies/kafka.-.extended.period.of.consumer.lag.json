{
  "policy": {
    "actions": [
      {
        "category": 3,
        "type": "event"
      }
    ],
    "conditions": [
      {
        "analytic": "baselineDeviation",
        "operator": ">",
        "wildcard": "kafka.zookeeper.consumer_groups.*.consumer_lag"
      }
    ],
    "deleted": false,
    "description": "Consumer lag has been higher than expected for over an hour.",
    "duration": 3900,
    "enabled": true,
    "name": "Kafka - Extended Period of Consumer Lag",
    "scope": {
      "elementType": "SERVER"
    }
  }
}